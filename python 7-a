class Vehicle:
    name = ""
    kind = "car"
    color = ""
    value = 100.00
    def info(self):
        data = "%s is a %s %s worth $%.2f." % (self.name, self.color, self.kind, self.value)
        return data

car1 = Vehicle()
car1.kind="Convertible"
car1.color="Red"
car1.name="Fer"
car1.value = 60000

car2=Vehicle()
car2.name="Jump"
car2.kind="Van"
car2.color="Blue"
car2.value=10000

print(car1.info())
print(car2.info())
